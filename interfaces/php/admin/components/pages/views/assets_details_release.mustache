
<form method="post" action="" id="add-release-form">
	<fieldset>
		<input type="hidden" name="doassetedit" value="makeitso" />
		<input type="hidden" name="asset_type" value="release" />
		<h3>Release Details</h3>
		<div class="col_oneoftwo">

			<style type="text/css">
				.release-cover {position:relative;width:100%;background-color:#ececed;background-size:auto 100%;background-position:center center;}
				.release-cover a {position:relative;display:block;width:90%;height:1%;padding:88% 5% 5% 5%;font-weight:bold;{{#cover_asset_id}}color:#fff !important;{{/cover_asset_id}}}
				.release-cover a:hover {color:#000 !important;}
			</style>
			<!--.release-cover a {position:relative;display:block;width:100%;height:1px;overflow:hidden;padding:98% 0 0 0;} -->
			<div>
				<div class="release-cover" style="background-image:url({{cover_url}});">
					<div class="release-cover-options">
						{{#cover_asset_id}}
							<a href="{{www_path}}/assets/edit/{{cover_asset_id}}" class="smalltext"><span class="icon camera"></span> <b>Add/edit cover</b></a>
						{{/cover_asset_id}}
						{{^cover_asset_id}}
							<a href="{{www_path}}/assets/add/file/setparent/{{id}}/setmetadata/cover" class="lightboxed returntocurrentroute smalltext"><span class="icon camera"></span> <b>Add/edit cover</b></a>
						{{/cover_asset_id}}
					</div>
				</div>
			</div>
			<input type="hidden" id="metadata_cover" name="metadata_cover" value="{{cover_asset_id}}" />
			<!--div class="track-list">
				<h5>Track List</h5>
				<ol class="alternating">
					<li>Track Title</li>
					<li>Track Title</li>
					<li>Track Title</li>
					<li>Track Title</li>
					<li>Track Title</li>
				</ol>
				<a href="#" class="add-track"><span class="icon plus_alt"></span>Add Track</a>
			</div-->

		</div>
		<div class="col_oneoftwo lastcol">
			<label>Release Title <input type="text" id="asset_title" name="asset_title" value="{{title}}" placeholder="Give It A Name" /></label>
			<label>Artist Name <input type="text" id="artist_name" name="artist_name" value="{{metadata_artist_name}}" placeholder="The Who" /></label>
			<label class="col_oneoftwo">Release Date <input type="text" id="release_date" name="release_date" class="date" value="{{metadata_release_date}}" /></label>
			<label class="col_oneoftwo lastcol">Matrix/Catalog Number <input type="text" id="matrix_number" name="matrix_number" value="{{metadata_matrix_number}}" /></label>

			<div class="row_seperator">.</div>
			<div class="fulfillment-files">
				<label>Fulfillment Files</label><br />
				{{#fulfillment_files}}
					<ul class="alternating">
				{{/fulfillment_files}}
				{{#fulfillment_files}}
					<li>
						<b>{{title}}</b><br />
						{{description}}
						<div class="smalltext">
							<a href="{{www_path}}/assets/edit/{{id}}" class="mininav_flush"><span class="icon pen"></span> Edit</a>
							<a href="{{www_path}}/assets/delete/{{id}}" class="mininav_flush needsconfirmation"><span class="icon x_alt"></span> Delete</a>
						</div>
					</li>
				{{/fulfillment_files}}
				{{#fulfillment_files}}
				</ul>
				{{/fulfillment_files}}
				{{^fulfillment_files}}
					No files have been added for fulfillment yet.<br />
				{{/fulfillment_files}}
				<a href="{{www_path}}/assets/add/file/setparent/{{id}}/addtometadata/fulfillment" class="add-fulfillment-file lightboxed returntocurrentroute smalltext"><span class="icon plus_alt"></span> <b>Add New File</b></a>
				<input type="hidden" id="metadata_fulfillment" name="metadata_fulfillment" value="{{metadata_fulfillment_json}}" />
			</div>
		</div>
	</fieldset>

	<br />
	<h3>Additional Fields</h3>
	<div class="drawer">
		<a class="drawerhandle">extra options</a>
		<div class="drawercontent">
			<fieldset>
				<label class="col_oneoftwo">Label Name <input type="text" id="label_name" name="label_name" value="{{metadata_label_name}}" placeholder="Stax Records" /></label>
				<label class="col_oneoftwo lastcol">Genre <input type="text" id="genre" name="genre" value="{{metadata_genre}}" placeholder="Dub-Step" /></label>
				<label class="col_oneoftwo">Copyright <textarea id="copyright" name="copyright">{{metadata_copyright}}</textarea></label>
				<label class="col_oneoftwo lastcol">Publishing <textarea id="publishing" name="publishing">{{metadata_publishing}}</textarea></label>
				<div class="formats col_oneoftwo">
					<!--label>Formats/UPC Codes</label>
					<ul class="alternating">
						<li>
							<select name="format" class="col_oneoftwo">
								<option>CD</option>
								<option>Digital</option>
								<option>LP</option>
								<option>Cassette</option>
							</select>
							<input type="text" id="formatType-upc" name="formatType-upc" value="" placeholder="123456789" class="col_oneoftwo" />
							<a href="#" class="mininav_flush needsconfirmation"><span class="icon x_alt"></span> <span class="visuallyhidden">Delete</span></a>
							<div class="clearfix">&nbsp;</div>
						</li>
					</ul>
					<a href="#" class="add-format"><span class="icon plus_alt smalltext"></span> Add New Format</a-->

				</div>

				<div class="private-files col_oneoftwo lastcol">
					<div class="row_seperator">.</div>
					<label>Private Files</label><br />
					{{#private_files}}
						<ul class="alternating">
					{{/private_files}}
					{{#private_files}}
						<li>
							<b>{{title}}</b><br />
							{{description}}
							<div class="smalltext">
								<a href="{{www_path}}/assets/edit/{{id}}" class="mininav_flush"><span class="icon pen"></span> Edit</a>
								<a href="{{www_path}}/assets/delete/{{id}}" class="mininav_flush needsconfirmation"><span class="icon x_alt"></span> Delete</a>
							</div>
						</li>
					{{/private_files}}
					{{#private_files}}
					</ul>
					{{/private_files}}
					{{^private_files}}
						No private storage files have been added.<br />
					{{/private_files}}
					<a href="{{www_path}}/assets/add/file/setparent/{{id}}/addtometadata/private"  class="add-private-file lightboxed returntocurrentroute smalltext"><span class="icon plus_alt"></span> <b>Add New File</b></a>
					<input type="hidden" id="metadata_private" name="metadata_private" value="{{metadata_private_json}}" />
				</div>

			</fieldset>
		</div>
	</div>

	<div class="row_seperator">.</div>
	<div class="col_oneoftwo">
		<br />
		<input class="button nojs" type="submit" value="Edit the release" />
		</form>

		<small class="fadedtext"><span class="icon box"></span> Selling out?</small> <a href="{{www_path}}/commerce/items/add/selectedasset/{{id}}" class="lightboxed returntocurrentroute"><small><b>Define commerce settings</b></small></a>

		<div class="row_seperator">.</div>
		<div class="drawer noprefix">
			<small class="fadedtext"><span class="icon cloud_download"></span> Need download codes? <a class="drawerhandle usecolor1">Export or create codes</a></small>
			<div class="drawercontent">
				<p>
				{{#asset_codes_count}}
					There are {{asset_codes_count}} codes for this asset. <a href="{{www_path}}/assets/edit/{{id}}?exportcodes=1" class="noajax">Export them!</a>
				{{/asset_codes_count}}
				{{^asset_codes_count}}
					There are no download codes for this asset.
				{{/asset_codes_count}}
				</p>
				<form method="post" action="{{www_path}}/assets/edit/{{id}}">

				<label for="add_codes_qty">Add (qty) more codes</label><br />
				<div class="col_oneoftwo">
					<input type="text" name="add_codes_qty" id="add_codes_qty" value="500" />
				</div>
				<div class="col_oneoftwo lastcol">
					<input type="submit" class="button" value="add codes" />
				</div>
				</form>
				<div class="row_seperator">.</div>
			</div>
		</div>

		<br /><br />
		<input class="button onlyjs externalsubmit" type="button" data-cash-target-form="#add-release-form" value="Edit the release" />
	</div>

	<div class="row_seperator">.</div>