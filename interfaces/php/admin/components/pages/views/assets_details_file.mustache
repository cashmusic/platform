<form accept-charset="UTF-8" method="post" id="edit-file-form" action="{{www_path}}/assets/edit/{{id}}">
	<input type="hidden" name="doassetedit" value="makeitso" />
	<input type="hidden" name="asset_type" value="file" />

	<h3>Asset details</h3>
	<p class="smalltext fadedtext">
		{{#parent_id}}<a href="{{www_path}}/assets/edit/{{parent_id}}"><b>return to parent asset</b></a><br />{{/parent_id}}
	</p>

	<label for="asset_title">Title / Name</label><br />
	<input type="text" id="asset_title" name="asset_title" value="{{title}}" />

	<div class="row_seperator">.</div>
	<label for="asset_description">Description</label><br />
	<textarea rows="3" id="asset_description" name="asset_description">{{description}}</textarea>

	<div class="row_seperator">.</div>
	<div class="col_oneoftwo">
		<label for="connection_id">Which storage connection?</label><br />
		<select id="connection_id" name="connection_id">
			{{{connection_options}}}
		</select>
	</div>

	<div class="col_oneoftwo lastcol">
		<label for="asset_location">Location (URI)</label><br />
		<input type="text" id="asset_location" name="asset_location" value="{{location}}" />
	</div>

	{{#parent_id}}
		<input type="hidden" name="parent_id" value="{{parent_id}}" />
	{{/parent_id}}



	<div class="col_oneoftwo">
		<div class="row_seperator">.</div><br />

		<small class="fadedtext"><span class="icon tag_fill"></span> Get organized.</small> {{{tag_markup}}}<a href="#" class="injectbefore usecolor1" rev="<input type='text' name='tag' value='' placeholder='Tag' />" rel="{{tag_counter}}"><small><b>Tag this file</b></small></a>
		
		<div class="row_seperator">.</div>
		<small class="fadedtext"><span class="icon box"></span> Selling out?</small> <a href="{{www_path}}/commerce/items/add/selectedasset/{{id}}" class="lightboxed returntocurrentroute"><small><b>Define commerce settings</b></small></a>

		{{#show_make_public}}
			<div class="row_seperator">.</div>
			<small class="fadedtext"><span class="icon unlock_fill"></span> Don't need security?</small> <a href="#" data-publicize-endpoint="{{{www_path}}}/ajax/publicizeasset/{{id}}" class="usecolor1"><small><b>Make this file public</b></small></a>
		{{/show_make_public}}

		<div class="row_seperator">.</div>
		<input class="button nojs" type="submit" value="Edit the asset" />
		</form>

		<div class="drawer noprefix">
			<small class="fadedtext"><span class="icon cloud_download"></span> Need download codes? <a class="drawerhandle usecolor1">Export or create codes</a></small>
			<div class="drawercontent">
				<p>
				{{#asset_codes_count}}
					There are {{asset_codes_count}} codes for this asset. <a href="{{www_path}}/assets/edit/{{id}}?exportcodes=1">Export them!</a>
				{{/asset_codes_count}}
				{{^asset_codes_count}}
					There are no download codes for this asset.
				{{/asset_codes_count}}
				</p>
				<form accept-charset="UTF-8" method="post" action="{{www_path}}/assets/edit/{{id}}">

				<label for="add_codes_qty">Add (qty) more codes</label><br />
				<div class="col_oneoftwo">
					<input type="text" name="add_codes_qty" id="add_codes_qty" value="500" />
				</div>
				<div class="col_oneoftwo lastcol">
					<input type="submit" class="button" value="add codes" />
				</div>
				</form>
				<div class="row_seperator">.</div>
			</div>
		</div>

		<br />
		<input class="button onlyjs externalsubmit" type="button" data-cash-target-form="#edit-file-form" value="Edit the file" />
	</div>


<div class="col_oneoftwo lastcol">
	<div class="drawer noprefix upload-corral">
		<small class="fadedtext"><span class="icon upload"></span> Using a hosting connection? <a href="#" data-upload-endpoint="{{{www_path}}}/assets/uploadform/" class="drawerhandle usecolor1 file-upload-trigger">Upload a file</a></small>
		<div class="drawercontent"></div>
	</div>
</div>
<div class="row_seperator">.</div>
