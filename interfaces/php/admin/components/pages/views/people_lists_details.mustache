<div class="row">
	<div class="six columns">
		<h4>List details</h4>
		<form accept-charset="UTF-8" method="post" action="{{www_path}}{{requested_route}}">
			<input type="hidden" name="{{form_state_action}}" value="makeitso" />
			<label for="list_name">Name</label>
			<input type="text" id="list_name" name="list_name" value="{{name}}" />

			<label for="connection_id">Connect To</label>
			<select id="connection_id" name="connection_id">
				<option value="0"{{#no_selected_connection}} selected="selected"{{/no_selected_connection}}>None (local list only)</option>
				{{{connection_options}}}
			</select>

			<br /><br />

			<label for="list_description">Description</label>
			<textarea rows="3" id="list_description" name="list_description">{{description}}</textarea>


			<button type="submit"><i class="icon icon-save"></i>{{list_button_text}}</button>
		</form>
	</div>

	<div class="six columns">
		<h4>Batch add contacts</h4>
		Need to add a lot of contacts to the list in a hurry? 
		<div class="drawer">
			<br />
			<div class="drawercontent">
				<form accept-charset="UTF-8" name="batchaddcontacts" method="post" action="{{www_path}}{{requested_route}}">
					<input type="hidden" name="dobatchcontactsadd" value="makeitso" />
					<label>Email Addresses</label>
					<textarea id="element_content" name="element_content" class="tall"></textarea>

					<button type="submit"><i class="icon icon-plus-sign"></i>Add contacts</button>
				</form>
			</div>
			<a class="drawerhandle">batch add form</a>
		</div>
	</div>
</div>