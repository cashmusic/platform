<form method="post" action="{{#assets_add_action}}{{www_path}}/assets/add/{{/assets_add_action}}">
	<input type="hidden" name="{{form_state_action}}" value="makeitso" />

	<h3>Asset Details</h3>
	<label for="asset_title">Title / Name</label><br />
	<input type="text" id="asset_title" name="asset_title" value="{{title}}" placeholder="Give It A Name" />

	<div class="row_seperator">.</div>
	<label for="asset_description">Description</label><br />
	<textarea rows="3" id="asset_description" name="asset_description">{{description}}</textarea>
	
	{{^force_type}}
		<div class="row_seperator">.</div>
		<label for="asset_type">Type</label><br />
		<select id="asset_type" name="asset_type">
			{{{type_options_markup}}}
		</select>
	{{/force_type}}
	{{#force_type}}
		<input type="hidden" name="asset_type" value="{{force_type}}" />
	{{/force_type}}
	<input type="hidden" name="parent_id" value="{{parent_id}}" />

	{{#show_location}}
		<div class="row_seperator">.</div>
		<div class="col_oneoftwo">
			<label for="connection_id">Which storage connection?</label><br />
			<select id="connection_id" name="connection_id">
				{{{connection_options}}}
			</select>
		</div>

		<div class="col_oneoftwo lastcol">
			<label for="asset_location">Location (URI)</label><br />
			<input type="text" id="asset_location" name="asset_location" value="{{location}}" /><br />
			[ or upload file ]
		</div>
	{{/show_location}}
	{{^show_location}}
		<input type="hidden" name="connection_id" value="" />
		<input type="hidden" name="asset_location" value="" />
	{{/show_location}}
	{{#metadata_command}}
		<input type="hidden" name="metadata_command" value="{{metadata_command}}" />
		<input type="hidden" name="metadata_name" value="{{metadata_name}}" />
	{{/metadata_command}}

	<div class="row_seperator">.</div>
	<div>
		<br />
		<input class="button" type="submit" value="{{asset_button_text}}" />
	</div>

</form>