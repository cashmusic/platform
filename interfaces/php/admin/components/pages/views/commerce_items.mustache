<div class="row">
	<div class="six columns">
		<h4>Add an item</h4>
		<p>
			Quickly add a digital item to the system.
		</p>

		<form accept-charset="UTF-8" method="post" action="{{www_path}}/commerce/items/edit/" name="add_item">
			<input type="hidden" name="doitemadd" value="makeitso" />

			<label for="item_name">Name</label>
			<input type="text" id="item_name" name="item_name" value="" placeholder="A public name for the item" />

			<label for="item_description">Description</label>
			<textarea rows="3" id="item_description" name="item_description"></textarea>

			<label for="item_price">Price ($ USD)</label>
			<input type="text" id="item_price" name="item_price" value="" placeholder="0.00" />

			<label for="item_fulfillment_asset">Fulfillment asset</label>
			<select id="item_fulfillment_asset" name="item_fulfillment_asset">
				{{{assets_options}}}
			</select>

			<br /><br />
			<button type="submit"><i class="icon icon-plus-sign"></i>Add the item</button>
		
		</form>
	</div>
	<div class="six columns">
		<h4>All items</h4>
		{{#items_all}}
		<ul class="alternating">
			{{#items_all}}
			<li>
				<b>{{name}}</b>
				{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}<br />
				<div class="itemnav">
					<a href="{{www_path}}/commerce/items/edit/{{id}}" class="mininav_flush"><i class="icon icon-pencil"></i>Edit</a>
					<a href="{{www_path}}/commerce/items/delete/{{id}}" class="mininav_flush needsconfirmation"><i class="icon icon-ban-circle"></i> Delete</a>
				</div>
			</li>
			{{/items_all}}
		</ul>
		{{/items_all}}

		{{^items_all}}
		<p>No items have been defined.</p>
		{{/items_all}}
	</div>
</div>