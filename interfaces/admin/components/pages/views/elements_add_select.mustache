{{! corresponding files: elements_add.php & elements_add.json }}

 <div class="storedisplay pure-u-md-1-2">
		<ul class="list">
		{{#elements_output}}
			<li><a class="elementdisplay" name="#{{element_type}}" href="{{www_path}}/elements/add/{{element_type}}">{{element_type_name}}<span>{{copy_author}}{{element_type_author}}</span><div class="icon icon-circle-plus"></div><!--icon--></a></li>
		{{/elements_output}}
		</ul>
</div><!--storedisplay-->
<div class="gallery  pure-u-md-1-2">
	<div class="movement">
	{{#elements_output}}
		<div id="{{element_type}}" class="example current">
			<h2>{{element_type_name}}<span>V.{{element_type_version}}</span></h2>
			<div class="slider">
				<img src="{{www_path}}/assets/images/elementheader.php?element={{element_type}}" width="100%" alt="{{element_type_name}}" />
			</div><!--slider-->
			<h3>{{element_type_description}}</h3>
			<p class="longdescription"><span class="altcopystyle">{{element_type_longdescription}}</span></p>
			<hr />
			<a class="button" href="{{www_path}}/elements/add/{{element_type}}">{{copy_add_element}}</a>
			<p class="updated">{{copy_last_updated}}{{element_type_updated}}</p>
		</div>
	{{/elements_output}}
	</div><!--movement-->
</div><!--gallery-->