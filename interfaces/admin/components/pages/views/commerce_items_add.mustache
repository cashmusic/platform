	<div class="pure-u-1 pure-u-md-1-2">
		<h4>Add an item</h4>
		<p>Quickly add a digital item to the system.</p>

		<form accept-charset="UTF-8" method="post" action="{{www_path}}/commerce/items/edit/" name="add_item">
			<input type="hidden" name="doitemadd" value="makeitso" />

			<label for="item_name">Name</label>
			<input type="text" id="item_name" name="item_name" value="" placeholder="A public name for the item" class="required" />

			<label for="item_description">Description</label>
			<textarea rows="3" id="item_description" name="item_description"></textarea>

			<label for="item_price">Price ($ USD)</label>
			<input type="text" id="item_price" name="item_price" value="" placeholder="0.00" required class="required number" />

			<label for="item_fulfillment_asset">Fulfillment asset</label>
			<select id="item_fulfillment_asset" name="item_fulfillment_asset">
				<option value="0">None (No digital fulfillment)</option>
				{{{assets_options}}}
			</select>

			<button type="submit">Add the item</button>
		</form>
	</div><!--pure-->
	
	<div class="pure-u-1 pure-u-md-1-2">
		<h4>All items</h4>
		{{#items_all}}
		<ul class="alternating">
			{{#items_all}}
			<li>
				<a class="primary" href="{{www_path}}/commerce/items/edit/{{id}}">
				<strong>{{name}}</strong>{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/commerce/items/edit/{{id}}" class="mininav_flush"><div class="icon icon-pencil"></div><!--icon-->Edit</a>
							<a href="{{www_path}}/commerce/items/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon--> Delete</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/items_all}}
		</ul>
		{{/items_all}}

		{{^items_all}}
		<p>No items have been defined.</p>
		{{/items_all}}
	</div><!--pure-->