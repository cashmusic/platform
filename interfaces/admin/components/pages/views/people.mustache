{{! corresponding files: poeple.php & people.json}}

{{^connection}}
	<h2 class="firstuse-title">{{{copy_firstuse}}}</h2>
<div class="callout texture pure-u-1">
	{{#all_services}}
		<div class="pure-u-1 pure-u-md-1-2">
			<div class="callout-inner">
				{{#service_has_image}}<h3><a href="{{link}}" target="_blank"><img src="{{www_path}}/assets/images/settings/{{key}}.png" alt="{{name}}"/></a></h3>{{/service_has_image}}
				<p>{{description}}</p>
				<a class="button fullwidth lightboxed" href="{{www_path}}/settings/connections/add/{{key}}">{{copy_button_add_connection}}</a>
			</div><!--callout-inner-->
		</div><!--pure-->
	{{/all_services}}
		<div class="pure-u-1 pure-u-md-1-2">
			<div class="callout-inner">
				<h3 class="title logo"><i class="icon icon-logo"></i></h3>
				<p>{{copy_no_third_party}}</p>
				<a class="button fullwidth lightboxed" href="{{www_path}}/people/lists/add/">{{copy_button_create_list}}</a>
			</div><!--callout-inner-->
		</div><!--pure-->
	</div><!--pure-->
{{/connection}}

{{#connection}}
<header>
<h4>{{copy_mailing_lists}}</h4>
</header>

	<div class="pure-u-1 {{^mass_connection}}-pure-u-md-2-3{{/mass_connection}}">
		{{#lists_all}}
		<ul class="people alternating">
			{{#lists_all}}
			<li>
			<div class="item">
				<div class="stats">
					<div class="icon icon-{{analytics_icon}}"></div><!--icon-->
					<span>{{analytics_active}}</span></div><!--stats-->
				<a class="info" href="{{www_path}}/people/lists/view/{{id}}">
				<strong>{{name}}</strong>{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
			</div><!--item-->
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/people/lists/view/{{id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->View</a>
							<a href="{{www_path}}/people/lists/edit/{{id}}" class="mininav_flush"><div class="icon icon-pencil"></div><!--icon-->Edit</a>
							<a href="{{www_path}}/people/lists/export/{{id}}" class="mininav_flush noajax"><div class="icon icon-dwnld"></div><!--icon-->Export</a>
							<a href="{{www_path}}/people/lists/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon--> Delete</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/lists_all}}
		</ul>
		{{/lists_all}}

		{{^lists_all}}
		<div class="empty">
			<p>{{copy_no_lists}}</p>
		</div><!--empty-->
		{{/lists_all}}

		<footer>
		<a class="button lightboxed" href="{{www_path}}/people/lists/add/">{{copy_button_add_new_list}}</a>
		
		</footer>
	</div><!--pure-->

	{{^mass_connection}}
		{{#all_mass_services}}
			<!--div class="pure-u-1 pure-u-md-1-3">
				<aside>
					<div class="aside-inner">
						{{#service_has_image}}<h3><a href="{{link}}" target="_blank"><img src="{{www_path}}/assets/images/settings/{{key}}.png" alt="{{name}}"/></a></h3>{{/service_has_image}}
						<p>{{description}}</p>
						<p><a class="fadedtext" href="{{link}}">{{link}}</a></p>
						<a class="button fullwidth lightboxed" href="{{www_path}}/settings/connections/add/{{key}}">{{copy_button_add_connection}}</a>
					</div>
				</aside>
			</div> -->
		{{/all_mass_services}}
	{{/mass_connection}}
{{/connection}}