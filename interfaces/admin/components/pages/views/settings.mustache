{{! corresponding files: settings.php & settings.json }}

<h4>{{copy_platform_settings}}</h4>
<p>{{copy_change_settings}}</p>
	<div class="pure-u-1">
		<h4>{{copy_connections}}</h4>
		<a class="button fullwidth lrglink" href="{{www_path}}/settings/connections/"><div class="icon icon-cog"></div><!--icon-->{{copy_manage}}</a>
		{{#platform_type_single}}
			<h4>{{copy_database}}</h4>
			<label>{{label_current_db_format}}</label>
			{{db_type}}
			{{#migrate_from_mysql}}
			&nbsp; <span class="altcopystyle fadedtext">{{copy_sqlite}}</span>
			{{/migrate_from_mysql}}
			{{#migrate_from_sqlite}}
			<strong>{{copy_migrate_mysql}}</strong>
			<p class="altcopystyle fadedtext">{{copy_migrating}}</p>
			<form accept-charset="UTF-8" method="post" action="">
				<input type="hidden" name="domigrate" value="makeitso" />
				<input type="hidden" name="driver" value="mysql" />
				<label for="hostname">{{label_hostname}}</label>
				<input type="text" id="hostname" name="hostname" />
				<span class="altcopystyle fadedtext">{{copy_server}}</span></span><br />
				<label for="databasename">{{label_db_name}}</label>
				<input type="text" id="databasename" name="databasename" />
				<label for="adminuser">{{label_admin_user}}</label>
				<input type="text" id="adminuser" name="adminuser" />
				<label for="adminpassword">{{label_admin_pass}}</label>
				<input type="password" id="adminpassword" name="adminpassword" />
				<input type="submit" value="Migrate" />
			</form>
			{{/migrate_from_sqlite}}
		{{/platform_type_single}}
	</div><!--pure-->
	<div class="pure-u-1">
		{{#platform_type_single}}
		<h4>{{copy_miscellaneous}}</h4>
			<form accept-charset="UTF-8" method="post" action="">
				<input type="hidden" name="domisc" value="makeitso" />
				<label for="systememail">{{label_default_email}}</label>
				<input type="text" id="systememail" name="systememail" value="{{{system_email}}}" />
				<span class="altcopystyle fadedtext">(name@domain.com or "<span class="nobr">Name &lt;name@domain.com&gt;</span>")</span>
				<label for="timezone">{{label_time_zone}}</label>
				<select id="timezone" name="timezone">
					{{{timezone_options}}}
				</select>
				<input type="submit" value="Change settings" />
			</form>	
		{{/platform_type_single}}

		<h4>{{copy_commerce_currency}}</h4>
			<form accept-charset="UTF-8" method="post" class="returntocurrentroute" action="{{www_path}}/settings/">	
				<label for="currency_id">{{label_currency}}</label>
				<select id="currency_id" name="currency_id">{{{currency_options}}}</select>
				<button class="fullwidth" type="submit">{{copy_use_currency}}</button>
			</form>
	</div><!--pure-->

{{#platform_type_single}}
	<h4>{{copy_platform_install}}</h4>
	<p>{{copy_full_path}}</p>
	<div class="callout">	
		<code>
			<input type="text" value="{{platform_path}}" />
		</code>
	</div><!--callout-->
{{/platform_type_single}}