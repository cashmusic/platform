{{! corresponding files: commerce_items.php & commerce_items.json }}

	<header>
	<h4>{{_inventory}}</h4>
	</header>
	<div class="pure-u-1 pure-u-md-2-3">
		{{#items_all}}
		<ul class="commerce alternating">
			{{#items_all}}
			<li>
				<div class="item">
					
					<div class="assetlink {{#physical_fulfillment}}physical{{/physical_fulfillment}}">
						<div class="icon {{#fulfillment_asset}}icon-{{#release_asset}}record{{/release_asset}}{{^release_asset}}file-block{{/release_asset}}{{/fulfillment_asset}}{{^fulfillment_asset}}icon-warning{{/fulfillment_asset}} "></div><!--icon-->
						{{#physical_fulfillment}}<div class="physical icon icon-truck"></div><!--icon-->{{/physical_fulfillment}}
					</div>
					{{^fulfillment_asset}}
					<div class="assetlink unlink">
						<div class="icon icon-warn"></div><!--icon-->
					</div>
					{{/fulfillment_asset}}
					<a class="info" href="{{www_path}}/commerce/items/edit/{{id}}">
					<strong>{{name}}</strong>
					{{#fulfillment_asset}}
						<!-- If Linked to asset -->
						<div class="icon icon-link"></div><!--icon-->
					{{/fulfillment_asset}}
					{{^fulfillment_asset}}
						<!-- If Not linked to asset -->
						<div class="icon icon-unlink"></div><!--icon-->
					{{/fulfillment_asset}}

					{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
				</div><!--item-->
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/commerce/items/edit/{{id}}" class="mininav_flush"><div class="icon icon-pencil"></div><!--icon-->Edit</a>
							<a href="{{www_path}}/commerce/items/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon-->Delete</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/items_all}}
		</ul>
		<a href="{{www_path}}/commerce/items/add" class="button lightboxed">{{copy_button_add_item}}</a>
		{{/items_all}}

		{{^items_all}}
		<div class="empty">
			<p>{{copy_no_items}}</p>
		</div><!--empty-->
		{{/items_all}}

		{{#show_pagination}}	
			<footer>
				
				<div class="left pagination"><a class="prev" href="/">{{copy_previous}}</a><span>/</span><a class="next active" href="/">{{copy_next}}</a></div><!--pagination-->
			</footer>
		{{/show_pagination}}
	</div><!--pure-->
	<div class="pure-u-1 pure-u-md-1-3">
	<h3 class="side-title">{{copy_inventory_items}}</h3>
	<p>{{copy_inventory_items_needed}}</p>
	<p>{{copy_an_item_can_be}}</p>
	<a href="{{www_path}}/commerce/items/add" class="button fullwidth lightboxed">{{copy_button_add_item}}</a>
	</div><!--pure-->


