	<h4>Items</h4>
	<div class="pure-u-1 pure-u-md-2-3">
		{{#items_all}}
		<ul class="commerce alternating">
			{{#items_all}}
			<li>
				<div class="item">
					
					<div class="assetlink{{#physical_fulfillment}} physical{{/physical_fulfillment}}">
						<div class="icon {{#fulfillment_asset}}icon-{{#release_asset}}record{{/release_asset}}{{^release_asset}}file{{/release_asset}}{{/fulfillment_asset}}{{^fulfillment_asset}}icon-warning{{/fulfillment_asset}} "></div><!--icon-->
					</div>
					{{^fulfillment_asset}}
					<div class="assetlink unlink">
						<div class="icon icon-warn"></div><!--icon-->
					</div>
					{{/fulfillment_asset}}
					<a class="info lightboxed" href="{{www_path}}/commerce/items/edit/{{id}}">
					<strong>{{name}}</strong>
					{{#fulfillment_asset}}
						<!-- If Linked to asset -->
						<div class="icon icon-link"></div><!--icon-->
					{{/fulfillment_asset}}
					{{^fulfillment_asset}}
						<!-- If Not linked to asset -->
						<div class="icon icon-unlink"></div><!--icon-->
					{{/fulfillment_asset}}

					{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
				</div><!--item-->
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/commerce/items/edit/{{id}}" class="lightboxed mininav_flush"><div class="icon icon-pencil"></div><!--icon-->Edit</a>
							<a href="{{www_path}}/commerce/items/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon-->Delete</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/items_all}}
		</ul>
		<a href="{{www_path}}/commerce/items/add" class="button lightboxed">Add an item</a>
		{{/items_all}}

		{{^items_all}}
		<div class="empty">
			<p>No items have been created. Add one to get started.</p>
		</div><!--empty-->
		{{/items_all}}

		{{#show_pagination}}	
			<footer>
				
				<div class="left pagination"><a class="prev" href="/">Previous</a><span>/</span><a class="next active" href="/">Next</a></div><!--pagination-->
			</footer>
		{{/show_pagination}}
	</div><!--pure-->
	<div class="pure-u-1 pure-u-md-1-3">
	<aside>
	<div class="aside-inner">
	<h3>Commerce Items</h3>
	<p>Commerce item types are for digital representations of anything you want
to sell.</p>
	<p>They can be connected with releases or files as fullfilmet assets for download and must be connected to a to be sold through a purchase element.</p>
	<a href="{{www_path}}/commerce/items/add" class="button fullwidth lightboxed">Add an item</a>
	</div><!--aside-inner-->
	</aside>
	</div><!--pure-->


