{{! corresponding files: elements_templates.php & elements_templates.json }}

<a href="{{www_path}}/elements/templates/add/"><strong>Add a new template</strong></a>
<div class="pure-u-1 pure-u-md-1-2">
	<h4>{{copy_page_templates}}</h4>
		<p>
			{{copy_page_templates_details}}
		</p>
		{{#page_templates}}
			<ul class="alternating">
				{{#page_templates}}
				<li>
					<a class="primary" href="{{www_path}}/elements/templates/edit/{{id}}">
						<strong>{{name}}</strong><span class="fadedtext nobr" style="font-weight:normal;"> // {{type}}</span></a>
					<div class="more"><div class="toggle"></div><!--toggle-->
						<div class="actions">
							<a href="{{www_path}}/elements/templates/edit/{{id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->{{copy_details}}</a> 
							<a href="{{www_path}}/elements/templates/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon--> Delete</a>
						</div><!--actions-->
					</div><!--more-->
				</li>
				{{/page_templates}}
			</ul>
		{{/page_templates}}

		{{^page_templates}}
			<p>{{copy_no_templates}}</p>
		{{/page_templates}}
</div><!--pure-->
<div class="pure-u-1 pure-u-md-1-2">
	<h4>{{copy_embed_templates}}</h4>
		<p>
			{{copy_embed_templates_details}}
		</p>
			
		{{#embed_templates}}
			<ul class="alternating">
			{{#embed_templates}}
				<li>
					<a class="primary" href="{{www_path}}/elements/templates/edit/{{id}}">
						<strong>{{name}}</strong><span class="fadedtext nobr" style="font-weight:normal;"> // {{type} </span></a>
						<div class="more"><div class="toggle"></div><!--toggle-->
						<div class="actions">
							<a href="{{www_path}}/elements/templates/edit/{{id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->{{copy_details}}</a> 
							<a href="{{www_path}}/elements/templates/delete/{{id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon-->{{copy_delete}}</a>
						</div><!--actions-->
					</div><!--more-->
				</li>
			{{/embed_templates}}
			</ul>
		{{/embed_templates}}

		{{^embed_templates}}
			<p>{{copy_no_embed_templates}}</p>
		{{/embed_templates}}
</div><!--pure-->