<div class="prefpanel pure-u-1">
	<h4 class="title"><div class="icon icon-wrench"></div><!--icon--><span>Publish Settings</span></h4>
	<div class="pure-u-1 pure-u-md-1-2">
		<div class="pref-inner">
			<h5>Edit Your Page</h5>
			<p>Your page is live at: <a href="{{user_page_uri}}" target="_blank"><i>{{user_page_display_uri}}</i></a> <a href="{{www_path}}/elements/templates/edit/{{template_id}}/page/parent/{{id}}" title="Edit campaign page" class="ql lightboxed icon icon-pencil"></a> </p>
			<!--<a href="{{www_path}}/campaigns/publish" class="button lightboxed">Publish a campaign</a>-->
				<div class="selecta">
					<label for="current-campaign">Published:</label>
					<select id="current-campaign">
						{{#campaigns_for_user}}		
