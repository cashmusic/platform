						{{/campaigns_for_user}}
					</select>
				</div><!--selecta-->
		</div><!--pref-inner-->
	</div><!--pure-->

	{{#has_elements}}
	<div class="pure-u-1 pure-u-md-1-2">
		<div class="pref-inner">
			<h5>Embed an element</h5>
			<p>If you don’t want to publish a page you can embed any element from your campaign anywhere on the web. Simply click the quick embed icon <i class="ql icon icon-share"></i><!--icon--> on the element above.</p>
		</div><!--pref-inner-->
	</div><!--pure-->
	{{/has_elements}}

	{{^has_elements}}
	<div class="pure-u-1 pure-u-md-1-2">
		<div class="pref-inner">
			<h5>Embed an element</h5>
			<p>No Elements have been created. Click the <strong>+Add</strong> button in the campaign window above to create and embed elements on the platform.</p>
		</div><!--pref-inner-->
	</div><!--pure-->
	{{/has_elements}}

</div><!--prefpanel-->
{{/has_campaigns}}

