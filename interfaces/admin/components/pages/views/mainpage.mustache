<!--/* Campaigns */-->
<div id="campaigns" class="{{#dashboard_active}}notifications{{/dashboard_active}}">
{{#has_campaigns}}
<div class="pure-u-1">
	<div class="selecta">
		<form accept-charset="UTF-8" method="post" action="{{www_path}}/">
			<label for="current-campaign">{{label_selected_campaign}}</label>
			<select name="current-campaign" id="current-campaign">
			{{{campaigns_as_options}}}
			</select>
		</form>
	</div><!--selecta-->
</div><!--pure-->	
