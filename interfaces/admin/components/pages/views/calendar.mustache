	<div class="pure-u-1 pure-u-md-1-2">
		<header>
		<h4>Add an event</h4>
		</header>
		<form accept-charset="UTF-8" method="post" action="{{www_path}}/calendar/events/add/" name="add_event">
			<input type="hidden" name="doeventadd" value="makeitso" />

			<label for="event_date">Date</label>
			<input type="text" id="event_date" name="event_date" class="date" placeholder="mm/dd/yyyy" value="" />

			<label for="event_venue_name">Venue</label>
			<input type="text" id="event_venue_name" name="event_venue_name" value="{{event_venue_name}}" placeholder="Start typing to search venues" class="autocomplete" data-cash-endpoint-url="{{{www_path}}}/ajax/autocomplete/venues" />
			<input type="hidden" id="event_venue" name="event_venue" value="" />
			<small class="fadedtext">Can't find the venue you're looking for? <a href="{{www_path}}/calendar/venues/add/" class="add-fulfillment-file lightboxed returntocurrentroute usecolor5">Add a new venue</a></small>

			<label for="event_comment">Comments (Support, CD Release, etc)</label>
			<textarea rows="3" id="event_comment" name="event_comment"></textarea>

			<label for="event_purchase_url">Ticket Purchase URL</label>
			<input type="text" id="event_purchase_url" name="event_purchase_url" value="" placeholder="Ticket Link URL" />

			<div class="pure-u-1"><input type='checkbox' class='checkorradio' id="event_ispublished" name='event_ispublished' value='' checked='checked' /><label class="checklabel" for="event_ispublished">Published?</label><input type='checkbox' class='checkorradio' id="event_iscancelled" name='event_iscancelled' value='' /><label class="checklabel" for="event_iscancelled">Cancelled?</label> </div><!--pure-->

			<button type="submit">Add That Event</button>
		</form>
	</div><!--pure-->

	<div class="pure-u-1 pure-u-md-1-2">
		<header>
		<h4>This week at a glance</h4>
		</header>
		{{#events_thisweek}}
		<ul class="alternating">
			{{#events_thisweek}}
			<li>
				<a class="primary" href="{{www_path}}/calendar/events/edit/{{event_id}}">
				<strong>{{formatted_date}}: {{event_location}}</strong><span class="descriptive spaced fadedtext">@ {{venue_name}}</span></a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/calendar/events/edit/{{event_id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->Details</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/events_thisweek}}
		</ul>
		{{/events_thisweek}}

		{{^events_thisweek}}
		<div class="empty">
		<p>No upcoming events for the next week were found.</p>
		</div><!--empty-->
		{{/events_thisweek}}

		<h4>Unpublished events</h4>
		{{#events_unpublished}}
		<ul class="alternating">
			{{#events_unpublished}}
			<li>
				<a class="primary" href="{{www_path}}/calendar/events/edit/{{event_id}}">
				<strong>{{formatted_date}}: {{event_location}}</strong><span class="descriptive spaced fadedtext">@ {{venue_name}}</span></a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/calendar/events/edit/{{event_id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon--></i>Details</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>

			{{/events_unpublished}}
		</ul>
		{{/events_unpublished}}

		{{^events_unpublished}}
		<div class="empty">
		<p>No unpublished events were found.</p>
		</div><!--empty-->
		{{/events_unpublished}}
	</div><!--pure-->