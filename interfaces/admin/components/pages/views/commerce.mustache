	<div class="pure-u-1">
		{{#orders_recent}}
		<ul class="commerce order alternating">
			{{#orders_recent}}
			<li>
				<div class="item">
					<div class="date"><span class="month">{{mmm}}</span><span class="day">{{dd}}</span></div><!--stats-->
					<a class="info" href="{{www_path}}/commerce/orders/view/{{id}}">
					<strong>{{copy_order}}{{number}}</strong><span class="descriptive spaced fadedtext">{{customer}} - {{items}}</span></a><span class="amount">{{gross}}</span>
				</div><!--item-->

				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/commerce/orders/view/{{id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->{{copy_details}}</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/orders_recent}}
		</ul>


		{{#show_pagination}}<div class="left pagination">{{#show_previous}}<a class="prev" href="{{www_path}}/commerce/{{^back_to_first}}page/{{previous_page}}/{{/back_to_first}}{{#filter_unfulfilled}}filter/unfulfilled/{{/filter_unfulfilled}}{{#filter_week}}filter/week/{{/filter_week}}">Previous</a>{{/show_previous}}{{#show_nextandprevious}}<span> / </span>{{/show_nextandprevious}}{{#show_next}}<a class="next active" href="{{www_path}}/commerce/page/{{next_page}}/{{#filter_unfulfilled}}filter/unfulfilled/{{/filter_unfulfilled}}{{#filter_week}}filter/week/{{/filter_week}}">Next</a>{{/show_next}}</div><!--pagination-->{{/show_pagination}}


		{{/orders_recent}}

		{{^orders_recent}}
		<div class="empty">
			<p>{{copy_sorry_no_orders}}</p>
		</div><!--empty-->
		{{/orders_recent}}


		<div class="drawer prefpanel pure-u-1">
		<div class="itemnav pure-u-1">
			<h4 class="drawerhandle title"><div class="icon icon-cog"></div><!--icon--><span>{{copy_commerce_settings}}</span></h4>
			<div class="drawercontent">
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="pref-inner">
				<h5>{{copy_primary_currency}}</h5>
					<form accept-charset="UTF-8" method="post" class="returntocurrentroute" action="{{www_path}}/commerce/">
						<div class="pure-u-">
						<select id="currency_id" name="currency_id">{{{currency_options}}}</select>
						<button class="fullwidth" type="submit">{{copy_use_this_currency}}</button>
						</div>
					</form>
				</div><!--pref-inner-->
			</div><!--pure-->
			{{#show_beta}}
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="pref-inner">
				<h5>{{copy_shipping_regions}}</h5>
					<form accept-charset="UTF-8" method="post" class="returntocurrentroute" action="{{www_path}}/commerce/">
						<div class="pure-u-1">
							<label for="region1">{{label_region_1}}</label>
							<input type="text" id="region1" name="region1" value="{{region1}}" placeholder="US" class="required" />
							<label for="region2">{{label_region_2}}</label>
							<input type="text" id="region2" name="region2" value="{{region2}}" placeholder="Rest of world" class="required" />
							<button class="fullwidth" type="submit">{{copy_button_set_shipping_regions}}</button>
						</div>
					</form>
				</div><!--pref-inner-->
			</div><!--pure-->
			{{/show_beta}}
			</div><!--draercontent-->
		</div><!--itemnav-->
		</div><!--drawer prefpanel-->

	</div><!--pure-->
