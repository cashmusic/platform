
{{#total_orders}}
	<div class="sectiondash">
		<div class="primarystat">
			<span>{{total_orders}}<label>New Order{{^orders_singular}}s{{/orders_singular}}</label></span>
			/
			<span>{{total_spend}}<label>Total</label></span>
		</div>
	</div>
{{/total_orders}}

{{#orders_recent}}
	<h4>Export orders</h4>
	<a href="{{www_path}}/commerce/orders/export/unfulfilled" class="button noajax">Export all UNFULFILLED orders</a>
	<a href="{{www_path}}/commerce/orders/export/" class="button noajax">Export all orders</a>
	{{#orders_recent}}{{/orders_recent}}
{{/orders_recent}}

<div class="row">
	<div class="six columns">
		<h4>Recent orders</h4>
		{{#orders_recent}}
		<ul class="alternating">
			{{#orders_recent}}
			<li>
				<a class="primary" href="{{www_path}}/commerce/orders/view/{{id}}">
				<strong>{{number}}</strong><span class="descriptive spaced fadedtext">{{date}} - {{gross}}: {{items}}</span></a>

				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
				<a href="{{www_path}}/commerce/orders/view/{{id}}" class="mininav_flush"><i class="icon icon-search"></i>Details</a>
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/orders_recent}}
		</ul>
		{{/orders_recent}}

		{{^orders_recent}}
		<p>No orders have been placed yet.</p>
		{{/orders_recent}}
	</div>
	<div class="six columns">
		<h4>All items</h4>
		{{#items_all}}
		<ul class="alternating">
			{{#items_all}}
			<li>
				<a class="primary" href="{{www_path}}/commerce/items/edit/{{id}}">
				<strong>{{name}}</strong>{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<a href="{{www_path}}/commerce/items/edit/{{id}}" class="mininav_flush"><i class="icon icon-pencil"></i>Edit</a>
						<a href="{{www_path}}/commerce/items/delete/{{id}}" class="mininav_flush needsconfirmation"><i class="icon icon-ban-circle"></i> Delete</a>
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/items_all}}
		</ul>
		{{/items_all}}

		{{^items_all}}
		<p>No items have been defined.</p>
		{{/items_all}}
		<a href="{{www_path}}/commerce/items/" class="button"><i class="icon icon-plus-sign"></i>Add an item</a>
	</div>
</div>