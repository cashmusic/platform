{{^connection}}
	<h2 class="firstuse-title">{{{copy_firstuse}}}</h2>
	<div class="callout texture pure-u-1">
		{{#all_services}}
		<div class="pure-u-1 pure-u-md-1-2">
			<div class="callout-inner">
				{{#service_has_image}}<h3><a href="{{link}}" target="_blank"><img src="{{www_path}}/assets/images/settings/{{key}}.png" alt="{{name}}"/></a></h3>{{/service_has_image}}
				<p>{{description}}</p>
				<p><a href="{{link}}" target="_blank">{{link}}</a></p>
				<a class="button fullwidth lightboxed" href="{{www_path}}/settings/connections/add/{{key}}">Add Connection</a>
			</div><!--callout-inner-->
		</div><!--pure-->
		{{/all_services}}
	</div><!--pure-->
{{/connection}}

{{#connection}}
<div class="pure-u-1 pure-u-md-1-2">
<h4>Orders</h4>
</div><!--pure-->
{{#show_filters}}
<div class="pure-u-1 pure-u-md-1-2">
<ul class="inline_subnav">
	<li><a class="current" href="/">All time</a></li>
		<li><a href="/">This week</a></li>
			<li><a href="/">Unfulfilled</a></li>
</ul>
</div><!--pure-->
{{/show_filters}}

{{#total_orders}}
		<div id="snapshot">
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="snapshot-inner">
					<h4>New Order{{^orders_singular}}s{{/orders_singular}} - (<a href="/">No Unfulfilled</a>)</h4>
					<h5 class="totalviews">{{total_orders}}73,769</h5>
				</div><!--snapshot-inner-->
			</div><!--pure-->
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="snapshot-inner">
					<h4>Total Amount</h4>
					<h5 class="totalviews">{{dashboard_list_total_new}}</h5>
					<h5 class="percentage"><div class="icon icon-lg-arw"></div><!--icon--></svg>0%</h5>
				</div><!--snapshot-inner-->
			</div><!--pure-->
		</div><!--snapshot-->
{{/total_orders}}

	<div class="pure-u-1">
		{{#orders_recent}}
		<ul class="commerce alternating">
			{{#orders_recent}}
			<li>
				<div class="item">
					<div class="date"><span class="month">{{mmm}}</span><span class="day">{{dd}}</span></div><!--stats-->
					<a class="info" href="{{www_path}}/commerce/orders/view/{{id}}">
					<strong>Order: {{number}}</strong><span class="descriptive spaced fadedtext">{{items}}</span></a><span class="amount">{{gross}}</span>
				</div><!--item-->

				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/commerce/orders/view/{{id}}" class="mininav_flush"><div class="icon icon-search"></div><!--icon-->Details</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/orders_recent}}
		</ul>

		<footer>
		{{#show_pagination}}<div class="left pagination"><a class="prev" href="/">Previous</a><span>/</span><a class="next active" href="/">Next</a></div><!--pagination-->{{/show_pagination}}
		</footer>

		{{/orders_recent}}

		{{^orders_recent}}
		<div class="empty">
			<p>Sorry, No orders have been placed yet.</p>
		</div><!--empty-->
		{{/orders_recent}}


	</div><!--pure-->
{{/connection}}