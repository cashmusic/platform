{
	"type":"element",
	"subtype":"tourdates",
	"lastupdated":"Feb 6, 2013",
	"version":1,
	"author":"CASH Music",
	"url":"http://cashmusic.org/",
	"license":"AGPL",
	"details":{
		"en":{
			"name":"Tour Dates",
			"description":"List the dates from your calendar.",
			"longdescription":"Filters let you set up tourdate archives as well as upcoming shows. The element will automatically update itself as dates expire or move to an archive.",
			"instructions":"All dates and times are in the timezone of their venue."
		}
	},
	"options":{
		"main":{
			"group_label":{
				"en":"Main settings"
			},
			"description":{
				"en":"Customize how many dates you want to display and what type of events to show."
			},
			"data":{
				"max_display_dates":{
					"label":{
						"en":"Max display dates"
					},
					"type":"number",
					"default":"25",
					"displaysize":"small"
				},
				"date_format":{
					"label":{
						"en":"How should dates be formatted?"
					},
					"type":"select",
					"values":{
						"year-month-day":"yy-mm-dd",
						"day-month-year":"dd-mm-yy",
						"month-day-year":"mm-dd-yy"
					},
					"required":true,
					"displaysize":"small"
				},
				"visible_event_types":{
					"label":{
						"en":"What events should display?"
					},
					"type":"select",
					"values":{
						"upcoming":"upcoming",
						"archive":"archive",
						"both":"both"
					},
					"required":true,
					"displaysize":"small"
				}
			}
		}
	}
}
